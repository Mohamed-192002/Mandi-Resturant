@model RolesRegisterDto
@{
    ViewData["Title"] = (Model.Id != null ? "تعديل بيانات المجموعة" : "إضافة مجموعة");
}
<section class="content-header">
    <h1>
        @(Model.Id != null ? "تعديل بيانات المجموعة" : "إضافة مجموعة")
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title"> بيانات المجموعة </h3>
                </div>
                <div class="box-body">
                    <form asp-action="@(Model.Id != null ? "Edit" : "Create")" method="post">
    
                        <div class="row">
                            <input type="hidden" asp-for="Id" />
                            <div class="col-sm-3">
                                <div class="form-group mb-2">
                                    <label asp-for="Name">اسم المجموعة</label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label class="font-weight-bold"></label>
                                    <button type="submit" class="btn btn-block btn-primary">@(Model.Id != null ? "تعديل" : "إضافة")</button>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label class="font-weight-bold"></label>
                                    <a class="btn btn-block btn-info" asp-action="Index">الرجوع للرئيسية</a>
                                </div>
                            </div>
                        </div>
                                
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
