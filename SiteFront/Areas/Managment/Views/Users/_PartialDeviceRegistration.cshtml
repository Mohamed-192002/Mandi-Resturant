@using Core.Entities
@model DeviceRegistrationRegisterDto

<form method="post" asp-action="RegisterDevice">
    <div class="form_wapper"
         style="
                      grid-template-columns: repeat(
                        auto-fit,
                        minmax(calc(95% / 3), 1fr)
                      );
                    ">
        <div class="FormControll">
            <label asp-for="UserId">الكاشير</label>
            <select asp-for="UserId" required asp-items="@(new SelectList(Model.Users, "Id", "Name"))">
                <option value="">اختر الكاشير</option>
            </select>
        </div>
        <div class="FormControll">
            <label asp-for="AccessCode">الكود</label>
            <input type="text"
                   asp-for="AccessCode" placeholder="الكود"
                   required />
            <span asp-validation-for="AccessCode" class="text-danger"></span>
        </div>
    </div>

    <div class="Buttons">
        <button type="submit"
                style="background: var(--color-primary)">
            اضافة هاتف
        </button>
    </div>
</form>

<partial name="_ValidationScriptsPartial" />


