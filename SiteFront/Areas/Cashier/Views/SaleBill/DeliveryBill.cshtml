@model List<DeliveryBillGetVM>
@{
    Layout = null;
    int index = 1;
}
<style>
    .customer-group {
        background-color: #ffe5e5;
        color: #b30000;
        font-weight: bold;
        border: 2px solid #ff9999;
        text-align: center;
        padding: 10px;
        font-size: 18px;
        border-radius: 6px;
    }

    /* Popup Styles */
    .popup-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 9999;
    }

    .popup-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        text-align: center;
        min-width: 350px;
        font-family: 'Cairo', sans-serif;
    }

    .popup-title {
        font-size: 20px;
        font-weight: bold;
        color: #333;
        margin-bottom: 15px;
    }

    .popup-message {
        font-size: 16px;
        color: #666;
        margin-bottom: 25px;
        line-height: 1.5;
    }

    .popup-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
    }

    .popup-btn {
        padding: 10px 25px;
        border: none;
        border-radius: 5px;
        font-size: 14px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        font-family: 'Cairo', sans-serif;
    }

    .popup-btn-confirm {
        background-color: #28a745;
        color: white;
    }

    .popup-btn-confirm:hover {
        background-color: #218838;
    }

    .popup-btn-cancel {
        background-color: #dc3545;
        color: white;
    }

    .popup-btn-cancel:hover {
        background-color: #c82333;
    }
</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200..1000&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
          integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css">

    <link rel="stylesheet" href="~/assets/css/form.css" />
    <link rel="stylesheet" href="~/assets/css/table.css" />
    <link rel="stylesheet" href="~/assets/css/global.css" />
    <link rel="stylesheet" href="~/assets/css/cashier.css" />

    <title>طلبات دليفري الشركات</title>
</head>
<body>
    <div class="loader">
        <span></span>
    </div>

    <div class="container">
        <div class="content" style="width: 100%">
            <div class="content_wapper">
                <header>
                    <div style="
                display: flex;
                align-items: center;
                gap: 10px;
                padding: 0px 10px;
              ">
                        <h3>طلبات دليفري الشركات</h3>
                    </div>

                </header>

                <!-- Tables -->
                <div class="table">
                    <div class="container_table">
                        <table id="myDataTable">
                            <thead>
                                <tr>
                                    <th>ت</th>
                                    <th>شركة التوصيل</th>
                                    <th>العميل</th>
                                    <th>رقم الطلب</th>
                                    <th>العنوان</th>
                                    <th>رقم الفاتورة</th>
                                    <th>التوصيل</th>
                                    <th> الاجمالي</th>
                                    <th> التفاصيل</th>
                                    <th>التحصيل</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@(index++)</td>
                                        <td>@item.DeliveryName</td>
                                        @if (!string.IsNullOrEmpty(item.CustomerName))
                                        {
                                            <td> @item.CustomerName</td>
                                        }
                                        else
                                        {
                                            <td> @item.DeliveryName</td>
                                        }
                                        <td>@item.OrderNumber</td>
                                        @if (!string.IsNullOrEmpty(item.CustomerAddress))
                                        {
                                            <td> @item.CustomerAddress</td>
                                        }
                                        else
                                        {
                                            <td> الشركة</td>
                                        }

                                        <td>@item.Id</td>
                                        <td>@item.DeliveryPrice</td>
                                        <td>@item.FinalTotal</td>
                                        <td>
                                            <table>
                                                <thead>
                                                    <tr>
                                                        <th>الصنف</th>
                                                        <th>السعر</th>
                                                        <th>الكمية</th>
                                                        <th>السعر الكلي</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var detail in item.BillDetailRegisterVM)
                                                    {
                                                        <tr>
                                                            <td>@detail.PName</td>
                                                            <td>@detail.Price</td>
                                                            <td>@detail.Amount</td>
                                                            <td>@detail.TotalPrice</td>
                                                        </tr>
                                                    }

                                                </tbody>
                                            </table>
                                        </td>
                                        <td>
                                            <input type="checkbox" id="@item.Id" onclick="changeDelivered(this)" />
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="goBack">
                    <a asp-action="Index" asp-controller="SaleBill" asp-area="Cashier">
                        <button>العودة</button>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Custom Popup -->
    <div id="confirmPopup" class="popup-overlay">
        <div class="popup-content">
            <div class="popup-title">تأكيد العملية</div>
            <div class="popup-message">هل أنت متأكد من تحصيل هذه الفاتورة؟</div>
            <div class="popup-buttons">
                <button class="popup-btn popup-btn-confirm" onclick="confirmDelivery()">نعم، متأكد</button>
                <button class="popup-btn popup-btn-cancel" onclick="cancelDelivery()">إلغاء</button>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/assets/js/Cashier.js"></script>
    <script type="text/javascript" src="~/assets/js/main.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>

    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/rowgroup/1.3.1/js/dataTables.rowGroup.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#myDataTable').DataTable({
                dom: 'Bfrtip', // Adds the buttons to the table
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: 'Export to Excel',
                        className: 'btn btn-success', // Optional styling
                        title: 'Table Export', // Excel file title
                    },
                    {
                        extend: 'pdfHtml5',
                        text: 'Export to PDF',
                        className: 'btn btn-danger', // Optional styling
                        title: 'Table Export', // PDF file title
                        orientation: 'landscape', // Use 'portrait' or 'landscape'
                        pageSize: 'A4' // Paper size
                    },
                    {
                        extend: 'print',
                        text: 'Print Table',
                        className: 'btn btn-primary', // Optional styling
                        title: 'Printed Table'
                    }
                ],
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json" // Arabic localization
                },
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                rowGroup: {
                    dataSrc: 2,
                    startRender: function (rows, group) {
                        return $('<tr/>')
                            .append('<td colspan="10" class="customer-group">👤 العميل :  ' + group + '</td>');
                    }
                },
                columnDefs: [
                { targets: 2 } // إخفاء عمود اسم العميل من الجدول لأنه يظهر كجروب
                ],
                 order: [[2, 'asc']],
            });
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
    @await Component.InvokeAsync("NToastNotify")
    <script type="text/javascript">
        let currentCheckbox = null;

        function changeDelivered(d) {
            currentCheckbox = d;
            // إظهار الـ popup المخصص
            document.getElementById('confirmPopup').style.display = 'block';
        }

        function confirmDelivery() {
            if (currentCheckbox) {
                debugger
                $.ajax({
                    type:'POST',
                    url:'/Cashier/BillDelivery/ChangeBillDeliveredForDeliveryBill?id='+currentCheckbox.id,
                    success: function () {
                        toastr.success("تم التحصيل");
                        setTimeout(function () {
                            window.location.href = "/Cashier/SaleBill/DeliveryBill";
                        }, 500);
                    },
                    error: function () {
                        toastr.error("لم يتم التحصيل برجاء المحاولة لاحقا");
                        currentCheckbox.checked = false;
                    }
                });
            }
            // إخفاء الـ popup
            document.getElementById('confirmPopup').style.display = 'none';
        }

        function cancelDelivery() {
            if (currentCheckbox) {
                // إلغاء تحديد الـ checkbox
                currentCheckbox.checked = false;
            }
            // إخفاء الـ popup
            document.getElementById('confirmPopup').style.display = 'none';
            currentCheckbox = null;
        }

        // إغلاق الـ popup عند الضغط خارجه
        document.addEventListener('click', function(event) {
            const popup = document.getElementById('confirmPopup');
            if (event.target === popup) {
                cancelDelivery();
            }
        });
    </script>
</body>
</html>
