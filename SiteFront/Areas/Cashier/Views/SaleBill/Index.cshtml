                                <div class="total_item" id="customerName">
                                    <p>العميل</p>
                                    <span></span>
                                    <input type="hidden"/>
                                </div>
                                @* <div class="total_item" id="customerReceive">
                                    <p>استلام العميل</p>
                                    <input type="checkbox" style="width:20px;height:20px;"/>
                                </div> *@
                                <div class="total_item orderDeliveredTime" id="orderDeliveredTime">
